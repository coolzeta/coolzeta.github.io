{
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ]
    },
    "settings": {
        "scanner": {
            "sources": {
                "negated": false
            }
        }
    }
}